<style>
	
</style>
<div class="row">
	<div class="col-lg-12">
		<h3>Purchase Order <small>Supplies and materials order to be purchased.</small></h3>
		<ol class="breadcrumb">
			<li>
				<a href="/"><i class="icon-dashboard"></i> Inventory</a>
			</li>
			<li class="active">
				<i class="icon-file-alt"></i> Purchase Order
			</li>
		</ol>
	</div>
</div>
<form method="post" action="/po/furnish/">
<div class="border">
	<div class="form-horizontal row">
		<div class="col-md-7">
			<div class="form-group">
			    <label class="col-sm-2 control-label">Supplier</label>
			    <div class="col-sm-8">
			      <input type="input" class="form-control" placeholder="Name">
			      <input type="hidden" name="po_supplier_id" value="1">
			    </div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label">Address</label>
			 	<div class="col-sm-8">
			   		<input type="input" class="form-control" placeholder="Address" name="po_supplier_address">
			    </div>
			</div>
		</div>
		<div class="col-md-5">
			<div class="form-group">
			    <label class="col-sm-4 control-label">P.O. No.</label>
			    <div class="col-sm-4">
			      <input type="text" class="form-control" name="po_no" placeholder="P.O. No.">
			    </div>
			</div>
			<div class="form-group">
				<label class="col-sm-4 control-label">Date</label>
			 	<div class="col-sm-4">
			   		<input type="date" class="form-control" name="po_date" placeholder="Date">
			    </div>
			</div>
			<div class="form-group">
				<label class="col-sm-4 control-label">Mode of Procurement</label>
			 	<div class="col-sm-5">
			   		<input type="input" class="form-control" placeholder="Mode" name="po_procmod">
			    </div>
			</div>
		</div>
	</div>
</div>
<div class="border">
	<div class="form-horizontal row">
		<div class="col-md-7">
			<div class="form-group">
			    <label class="col-sm-2 control-label">Delivery Place</label>
			    <div class="col-sm-4">
			      <input type="input" class="form-control" placeholder="Place" name="po_deliv_place">
			    </div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label">Delivery Date</label>
			 	<div class="col-sm-3">
			   		<input type="date" class="form-control" placeholder="Date" name="po_deliv_date">
			    </div>
			</div>
		</div>
		<div class="col-md-5">
			<div class="form-group">
			    <label class="col-sm-4 control-label">Delivery Term</label>
			    <div class="col-sm-4">
			      <input type="text" class="form-control" placeholder="Term" name="po_deliv_term">
			    </div>
			</div>
			<div class="form-group">
				<label class="col-sm-4 control-label">Payment Term</label>
			 	<div class="col-sm-4">
			   		<input type="text" class="form-control" placeholder="Term" name="po_pay_term">
			    </div>
			</div>
		</div>
	</div>
</div>
<div class="border">
		<div class="form-inline row item-input">
			<div class="col-sm-4">
			    <label class="control-label col-sm-2">Desc</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" data="po_dtl_item_desc" placeholder="Description">
			  	</div>
		  	</div>
		  <div class="col-sm-2">
		  		<label class="control-label col-sm-5">Quantity</label>
			    <div class="col-sm-7">
				    <input type="text" class="form-control" data="po_dtl_item_desc" placeholder="QTY" class="qty">
				</div>
		  </div>
		  <div class="col-sm-2">
		  		<label class="control-label col-sm-3">Unit</label>
			    <div class="col-sm-9">
				    <input type="text" class="form-control" placeholder="Unit" data="po_dtl_item_unit">
				</div>
		  </div>
		  <div class="col-sm-2">
		  		<label class="control-label col-sm-6">Unit Cost</label>
			    <div class="col-sm-6">
				    <input type="text" class="form-control cost" placeholder="Cost" data="po_dtl_item_cost">
				</div>
		  </div>
		  <div class="col-sm-2">
		  		<button type="button" class="btn btn-default" id="add-to-purchase">ADD TO LIST</button>
		  </div>
		</div>
</div>
<div class="row border-space">
	<div class="col-lg-12">
		<h4 align="center">Purchase List</h4>
		<div class="table-responsive">
			<table class="table table-hover table-striped table-bordered tablesorter">
				<thead>
					<tr>
						<th class="header">Item No. <i class="fa fa-sort"></i></th>
						<th class="header">Item Unit <i class="fa fa-sort"></i></th>
						<th class="header">Quantity <i class="fa fa-sort"></i></th>
						<th class="header">Description <i class="fa fa-sort"></i></th>
						<th class="header">Unit Cost <i class="fa fa-sort"></i></th>
						<th class="header">Amount <i class="fa fa-sort"></i></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>1<input type="hidden" value="1" name="po_dtl[0][po_dtl_item_no]"/></td>
						<td>bag<input type="hidden" value="1" name="po_dtl[0][po_dtl_item_unit]"/></td>
						<td>50<input type="hidden" value="1" name="po_dtl[0][po_dtl_item_qty]"/></td>
						<td>Portland Cement<input type="hidden" value="1" name="po_dtl[0][po_dtl_item_desc]"/></td>
						<td>228.00<input type="hidden" value="1" name="po_dtl[0][po_dtl_item_cost]"/></td>
						<td>11,480</td>	
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
<div class="row">
	<button type="submit" class="btn btn-primary" name="furnish">Furnish</button>
</div>
</form>
<script type="text/javascript">
(function($) {
	var po_dtl = {};
	var itemCounter = 0;
	var item_inputs = $('div.item-input').find('input');
	
	$('#add-to-purchase').on('click', function() {
		console.log('hey');
		po_dtl[itemCounter] = {};
		$.each(item_inputs, function(i, e){
			var item_input = $(e);
			po_dtl[itemCounter][item_input.attr('data')] = item_input.val();
		});
		po_dtl[itemCounter]['po_dtl_item_no'] = itemCounter;
		itemCounter+=1;
	});
})(jQuery);
</script>